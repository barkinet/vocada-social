include ../mixins
extends ../layout

block content

	div
		- if (locals.hasMessages) {
			div#login-notice-header
				h1 #{locals.messages}
		- }
		div#login-logo
			a(href='/') vocada
			em 0.0.1
			
		- if (locals.businesses.length > 0)
			div(class='simple-select-menu business-select-menu')
				h4 SELECT A BUSINESS
				ul
					for business in locals.businesses
						li
							div.button
								a(href='#', id='#{business._id}')
									i.icon-windows
									span #{business.name}
		div#login-powered
			img(src="http://speaksocial.tv/img/powered-by-speak-social.png")