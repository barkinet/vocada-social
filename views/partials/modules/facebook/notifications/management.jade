div.viewport-header
	h3 Facebook Notifications Settings
	a(ng-click='closeWindow("management")')
		i.icon-remove-sign
ul(class='module-options {{location}}')
	li(ng-controller='OptionCtrl', ng-repeat='option in management.settings', class='{{option.type}}', ng-click='toggleOption()') 
		i(class='{{"icon-check"+icon.on}} {{icon.color}}') 
		span(class='{{text.on}}') Display notification information about {{option.type}}s