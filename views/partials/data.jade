div.data-wrapper
	div(ng-cloak, ng-repeat='mod in mods', class='module {{mod.class || mod.title}} {{size}}', ng-include='module', ng-controller='ModuleCtrl', ng-show='load.complete')

div.location-footer
	div.current-page
		a(href='#', class='app-color facebook'): i.icon-facebook
		span {{location}}
	div(class='module-loading', ng-hide='load.complete')
		span loading
		img(src='/images/ng-load.gif')
	div.page-options
		a(href='#', data-toggle='dropdown', class='dropdown-toggle'): i.icon-cog
		ul(class='dropdown-menu dropup')
			li: a(href='#')
				i.icon-wrench
				span load a new random tip
			li.top-divider: a(href='#')
				i.icon-wrench
				span vocada {{location}} settings
