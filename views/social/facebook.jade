include ../mixins
extends ../layout

block content
	mixin popupNavigationMenu
	
	div#main
		mixin topNavigationMenu
		div.content
			div.page-header
				//-a(href="/social/facebook", class="icon blue facebook")
					i.icon-facebook
					span facebook
			- if (locals.facebook.connected == true && locals.facebook.data) {
					- if(locals.facebook.account == false) {
						div.page-notice
							h1 Please select a Facebook business account page
							p This needs to match the Vocada business you are currently logged into
						div(class='simple-select-menu facebook-account-select-menu')
							ul
								for account in locals.facebook.data.accounts.data
									li
										div.button
											a(href="#")
												i.icon-signin
												span #{account.name}
								
					- } else {
						div
							!{JSON.stringify(locals.facebook.data)}
					- }
			- } else {
				div.social-login
					p Please login to Facebook using your admin account.
					div(class="social-login-button facebook-login-button")
						a(href="#{locals.facebook.url}", class="icon blue border app-color facebook")
							i.icon-facebook
							span login

				div.help-box
					a(href="#") "My business is a Facebook personal page!" No worries click here for a guide on switching your personal page to a business page. 

				div.help-box
					a(href="#") "I'm not the admin of my Facebook page!" No worries click here to see a guide of having a current admin grant you access. 
			- }

